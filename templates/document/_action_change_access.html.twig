<div class="modal fade text-left"  :class="{ show: btnChangeAccess }"
     tabindex="-1" :style="{display: btnChangeAccess ? 'block' : 'none'}" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'app.change_rights'|trans }}</h5>
                <button type="button" class="close rounded-pill" data-bs-dismiss="modal" aria-label="Close" @click="sendValueBtnChangeAccess()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            <div class="modal-body">
                <h4 class="card-title">{% verbatim %}{{ document.name + '.' + document.extension }} {% endverbatim %}</h4>
                <div class="input-group mb-3" v-for="(item, key) in data">
                    <access inline-template :access-value="item.access" :index="key" @send-change-access-value="changeAccessValue">
                        {% include 'document/_access.html.twig' %}
                    </access>
                    <input type="text" class="form-control" :value="item.receiver" disabled>
                    <button class="btn btn-outline-primary" type="button" @click="update(key)">{{ 'app.confirm'|trans }}</button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-bs-dismiss="modal" @click="sendValueBtnChangeAccess()">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">{{ 'app.cancel'|trans }}</span>
                </button>
            </div>
        </div>
    </div>
</div>
