<div class="modal fade text-left"  :class="{ show: btnRemove }"
     tabindex="-1" :style="{display: btnRemove ? 'block' : 'none'}" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'app.delete'|trans }}</h5>
                <button type="button" class="close rounded-pill" data-bs-dismiss="modal" aria-label="Close" @click="sendValueBtnRemove()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x">
                        <line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <h4 class="card-title">{% verbatim %}{{ document.name + '.' + document.extension }} {% endverbatim %}</h4>
                <p class="text-danger">{{ 'app.are_you_sure_you_want_to_delete_it'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-bs-dismiss="modal" @click="sendValueBtnRemove()">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">{{ 'app.cancel'|trans }}</span>
                </button>
                <button type="button" class="btn btn-primary ml-1" data-bs-dismiss="modal">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block" @click="sendRemove()">{{ 'app.confirm'|trans }}</span>
                </button>
            </div>
        </div>
    </div>
</div>
