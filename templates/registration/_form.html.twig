<div class="signup-content">
    <div class="signup-form">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="form-title">{{ 'Sign up'|trans([], 'security') }}</h1>
        {{ form_start(registrationForm, { 'attr' : { 'class': 'register-form' } }) }}
        <div class="form-group">
            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
            {{ form_widget(registrationForm.name, {'attr': {'placeholder': 'Your Name'|trans([], 'security')}}) }}
        </div>
        <div class="invalid-feedback d-block">
            {{ form_errors(registrationForm.name) }}
        </div>
        <div class="form-group">
            <label for="email"><i class="zmdi zmdi-email"></i></label>
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Your Email'|trans([], 'security')}}) }}
        </div>
        <div class="invalid-feedback d-block">
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-group">
            <label for="re-pass"><i class="zmdi zmdi-lock"></i></label>
            {{ form_widget(registrationForm.password.first, {'attr': {'placeholder': 'Password'|trans([], 'security')}}) }}
        </div>
        <div class="invalid-feedback d-block">
            {{ form_errors(registrationForm.password.first) }}
        </div>
        <div class="form-group">
            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
            {{ form_widget(registrationForm.password.second, {'attr': {'placeholder': 'Repeat your password'|trans([], 'security') }}) }}
        </div>
        <div class="form-group form-button">
            <input type="submit" name="signup" id="signup" class="form-submit" value="{{ 'Register'|trans([], 'security') }}"/>
        </div>
        {{ form_end(registrationForm) }}
    </div>
    <div class="signup-image">
        <figure><img src="{{ asset('assets/images/common.jpg') }}" alt="sing up image"></figure>
        <a href="{{ path('app_login') }}" class="signup-image-link">{{ 'I am already member'|trans([], 'security') }}</a>
    </div>
</div>
